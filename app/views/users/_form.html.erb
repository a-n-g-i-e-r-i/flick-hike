<%= form_for @user, :html => {:class => "form-horizontal center-block"} do |f| %>
  <% if current_user == @user %>
    <h1 class="form-group text-color title"><%= @user.first_name%>'s Info</h1>
  <% else %>
    <h1 class="form-group text-color title">Signup</h1>
  <% end %>
  <div class="form-group">
    <%= f.label :email, "email", class: " control-label" %>
    <%= f.text_field :email, :required => true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :first_name, "first name", class: "control-label" %>
    <%= f.text_field :first_name, :required => true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, "last name", class: "control-label" %>
    <%= f.text_field :last_name, :required => true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :current_city, "current city", class: "control-label" %>
    <%= f.text_field :current_city, :required => true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :profile_photo, "profile photo url", class: " control-label" %>
    <%= f.text_field :profile_photo, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "password", class: "control-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-default btn-purple center-bl form-control" %>
  </div>
 <% end %>
