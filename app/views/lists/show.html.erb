<h3 class="title accent-text"><%= @list.title %></h3>
<div>
  <div class="button"><p><span class="context-text">curator</span> <span class="accent-text"><%=link_to "#{@list.user.username}", user_path(@list.user.id), class: "accent-text" %></span></p>
  </div><br><hr>
  <p><%= @list.description %></p>
</div><br><hr>
<div class="col-lg-6 col-lg-offset-3 text-center">
  <h2 class="title accent-text">Scenes</h2><hr>
  <% if @list.scenes.size > 0 %>
    <% @list.scenes.each do |scene| %>
      <h4><%= link_to scene.title, scene_path(scene.id), class: "accent-text" %></h4>
      <p class="context-text"><%= scene.locations%><p>
      </p><hr>
    <% end %>
  <% else %>
    <h4>This list could use some curation</h4>
  <% end %>
</div>

<% if current_user == @list.user %>
   <div>
    <div class = "button">
      <%= link_to "Edit", edit_list_path(@list.id), class: 'btn btn-special' %>
    </div>
    <div class = "button">
      <%= button_to "Delete", list_path(@list),
   { method: :delete, data: { confirm: "Are you sure you want to delete '#{@list.title}'?"}, class: 'btn btn-special' } %>
    </div>
  </div>
<% end %>
